import matplotlib.pyplot as plt
import networkx as nx

# Create directed graph
G = nx.DiGraph()

# Add nodes
G.add_node("User Requests")
G.add_node("Load Balancer")
G.add_node("ACO Algorithm")
G.add_node("ABC Algorithm")
G.add_node("VM1")
G.add_node("VM2")
G.add_node("VM3")

# Add edges
G.add_edges_from([
    ("User Requests", "Load Balancer"),
    ("Load Balancer", "ACO Algorithm"),
    ("Load Balancer", "ABC Algorithm"),
    ("ACO Algorithm", "VM1"),
    ("ACO Algorithm", "VM2"),
    ("ABC Algorithm", "VM3"),
])

# Draw graph
plt.figure(figsize=(6, 4))
nx.draw(G, with_labels=True, node_color="lightblue", edge_color="gray", node_size=3000, font_size=10)
plt.title("Cloud Load Balancing Architecture")
plt.savefig("docs/design_diagram.png")  # Save the diagram
plt.show()
